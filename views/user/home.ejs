<% layout("/layouts/boilerplate")%>

<div class="container mt-4">
    <h2 class="text-center text-3xl font-bold text-gray-800 mb-4 animate-slide-in">Explore Courses</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 home animate-fade-in">
        <% for(const course of allCourses){ %>
            <a href="/home/<%=course._id%>" class="listing_link">
                <div class="card listing-card transform transition duration-500 ease-in-out hover:scale-105 hover:shadow-2xl rounded-lg overflow-hidden bg-white border border-gray-200 w-full h-[32rem]">
                    <div class="relative h-2/3">
                        <img src="<%= course.profilePhoto.url %>" 
                             class="w-full h-full object-cover transition duration-300 ease-in-out hover:opacity-80" 
                             alt="image">
                        <div class="absolute inset-0 bg-gradient-to-t from-black via-transparent to-transparent opacity-75"></div>
                    </div>
                    <div class="card-body p-6 h-1/3 flex flex-col justify-between">
                        <p class="text-2xl font-bold text-gray-900"><%=course.title%></p>
                        <% if (course.owner) { %>
                            <p class="text-gray-600 text-lg">Created By: <i class="text-indigo-600 font-medium"><%= course.owner.username %></i></p>
                        <% } else { %>
                            <p class="text-red-500 font-semibold text-lg"><i>Owner not available</i></p>
                        <% } %>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>

<style>
    /* Fade-in Animation */
    .animate-fade-in {
        opacity: 0;
        transform: translateY(30px);
        animation: fadeInUp 0.8s ease-out forwards;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Slide-in Animation for Title */
    .animate-slide-in {
        opacity: 0;
        transform: translateX(-30px);
        animation: slideIn 1s ease-out forwards;
    }

    @keyframes slideIn {
        from {
            opacity: 0;
            transform: translateX(-30px);
        }
        to {
            opacity: 1;
            transform: translateX(0);
        }
    }

    /* Ensure images cover the space */
    .listing-card img {
        object-fit: cover; 
    }
