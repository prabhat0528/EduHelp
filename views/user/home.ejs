<% layout("/layouts/boilerplate") %>
<div class="container mt-4 px-3">
    <h2 class="text-center text-2xl sm:text-3xl font-bold text-gray-800 mb-4 animate-slide-in">Explore Courses</h2>
    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 sm:gap-6 home animate-fade-in">
        <% for(const course of allCourses){ %>
            <a href="/home/<%=course._id%>" class="listing_link">
                <div class="card listing-card transform transition duration-500 ease-in-out hover:scale-105 hover:shadow-2xl rounded-lg overflow-hidden bg-white border border-gray-200 w-full">
                    <div class="relative h-64 sm:h-72">
                        <img src="<%= course.profilePhoto.url %>" class="w-full h-full object-cover transition duration-300 ease-in-out hover:opacity-80" alt="<%= course.title %>">
                        <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-70 card-img-overlay"></div>
                    </div>
                    <div class="card-body p-4 sm:p-6 flex flex-col justify-between">
                        <p class="text-xl sm:text-2xl font-bold text-gray-900"><%=course.title%></p>
                        <% if (course.owner) { %>
                            <p class="text-gray-600 text-base sm:text-lg">Created By: <i class="text-indigo-600 font-medium"><%= course.owner.username %></i></p>
                        <% } else { %>
                            <p class="text-red-500 font-semibold text-base sm:text-lg"><i>Owner not available</i></p>
                        <% } %>
                    </div>
                </div>
            </a>
        <% } %>
    </div>
</div>