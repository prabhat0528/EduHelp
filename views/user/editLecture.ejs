<% layout("/layouts/boilerplate")%>
<div class="row">
    <div class="col-6 offset-3">
        <h2>Edit this lecture:</h2>
        <form method="POST" action="/home/<%=course._id%>/<%=lecture._id%>/edit?_method=PUT" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" placeholder="<%=lecture.title%>" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" name="description" placeholder="<%=lecture.description%>" class="form-control" required/>
            </div>
            <div class="mb-3">
                <label for="profilePhoto" class="form-label">Profile Photo</label>
                <input type="file" name="profilePhoto" placeholder="Upload your picture" class="form-control" accept="image/*" required/>
            </div>
            <div class="mb-3">
                <label for="video" class="form-label">Video</label>
                <input type="file" name="video" placeholder="Upload your video" class="form-control" accept="video/*" required/>
            </div>
            <button class="uploadBtn">Upload</button>
        </form>
    </div>
</div>