<% layout("/layouts/boilerplate") %>
<div class="row justify-content-center">
    <div class="col-11 col-md-8 col-lg-6">
        <h2 class="text-center mb-4">Edit This Lecture</h2>
        <form method="POST" action="/home/<%=course._id%>/<%=lecture._id%>/edit?_method=PUT" enctype="multipart/form-data" class="p-3 needs-validation" novalidate>
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input type="text" name="title" value="<%=lecture.title%>" placeholder="<%=lecture.title%>" class="form-control" required />
                <div class="invalid-feedback">Please provide a title.</div>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <input type="text" name="description" value="<%=lecture.description%>" placeholder="<%=lecture.description%>" class="form-control" required />
                <div class="invalid-feedback">Please provide a description.</div>
            </div>
            <div class="mb-3">
                <label for="profilePhoto" class="form-label">Profile Photo</label>
                <input type="file" name="profilePhoto" class="form-control" accept="image/*" />
                <small class="form-text text-muted">Leave blank to keep current photo.</small>
            </div>
            <div class="mb-3">
                <label for="video" class="form-label">Video</label>
                <input type="file" name="video" class="form-control" accept="video/*" />
                <small class="form-text text-muted">Leave blank to keep current video.</small>
            </div>
            <div class="text-center">
                <button class="uploadBtn">Upload</button>
            </div>
        </form>
    </div>
</div>