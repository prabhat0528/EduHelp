      </div>
    </article>
  </section>
</div>

<script>
  // Ensure animation is applied after DOM load
  document.addEventListener('DOMContentLoaded', () => {
    const content = document.querySelector('.animate-fade-in');
    if (content) {
      content.style.animation = 'fadeIn 2s ease-in-out forwards';
    }
  });
</script>

<style>
  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  .animate-fade-in {
    opacity: 0;
    animation: fadeIn 2s ease-in-out forwards;
  }
</style>
