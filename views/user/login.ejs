<% layout("/layouts/boilerplate")%>

<div class="container mt-4">
    <h1 class="text-center text-3xl font-bold mb-6">Login:</h1>
    <div class="max-w-md mx-auto">
        <form action="/login" method="POST" class="needs-validation" novalidate>
            <div class="mb-4">
                <label for="username" class="form-label block text-gray-700 font-semibold">Username</label>
                <input type="text" name="username" id="username" class="form-control w-full p-3 border border-gray-300 rounded-md" required />
            </div>

            <div class="mb-4">
                <label for="password" class="form-label block text-gray-700 font-semibold">Password</label>
                <input type="password" name="password" id="password" class="form-control w-full p-3 border border-gray-300 rounded-md" required />
            </div>

            <button type="submit" class="btn btn-success w-full py-3 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600">Login</button>
        </form>
    </div>
</div>
