<% layout("/layouts/boilerplate") %>

<div class="container mt-4">
    <h3 class="text-center text-2xl font-bold mb-4"><%= courseDetail.title %></h3>
    
    <div class="card listing-card rounded flex justify-center" style="width: 20rem; height:25rem; border: 2px solid red;">
        <img src="<%= courseDetail.profilePhoto.url %>" class="cardImage" alt="image">
        <div class="card-body">
            <p class="card-text"><b>Created By: </b>
                <% if (courseDetail.owner) { %>
                    <i><%= courseDetail.owner.username %></i>
                <% } else { %>
                    <i>Unknown</i>
                <% } %>
            </p>
            <p class="card-text"><b>Description: </b><%= courseDetail.description %></p>
        </div>
    </div>

    <% if (!(currUser && currUser._id && courseDetail.owner && currUser._id.equals(courseDetail.owner._id))) { %>
        <form method="POST" action="/home/addcourse/<%= courseDetail._id %>">
            <button class="btn btn-success mt-3 w-full py-3 bg-green-500 text-white font-semibold rounded-md hover:bg-green-600">Add to My Courses</button>
        </form>
    <% } %>

    <% if (currUser && currUser._id && courseDetail.owner && currUser._id.equals(courseDetail.owner._id)) { %>
        <div class="editing mt-3">
            <a href="/home/<%= courseDetail._id %>/addLecture" class="btn btn-danger w-full py-3 bg-red-500 text-white font-semibold rounded-md hover:bg-red-600">Add Lecture</a>
            <form method="POST" action="/home/<%= courseDetail._id %>?_method=DELETE" class="d-inline">
                <button class="btn btn-dark mt-2 mb-1 w-full py-3 bg-gray-800 text-white font-semibold rounded-md hover:bg-gray-900">Delete Course</button>
            </form>
        </div>
    <% } %>

    <div class="mt-4">
        <hr style="border: 2px solid red; border-width: 3px; color: red; height: 3px;">

        <% if (courseDetail.lectures && courseDetail.lectures.length > 0) { %>
            <h4 class="text-2xl font-bold text-gray-800 mb-4">Lectures:</h4>

            <div class="d-flex flex-wrap justify-content-start gap-6">
                <% courseDetail.lectures.forEach((lecture) => { %>
                    <div class="card" style="width: 220px; height: 430px; border: 1px solid #ddd; box-shadow: 2px 2px 8px rgba(0,0,0,0.1);">
                        <img src="<%= lecture.profilePhoto.url %>" class="card-img-top" alt="Lecture Image"
                             style="object-fit: cover; width: 100%; height: 160px;">

                        <div class="card-body d-flex flex-column text-center">
                            <h5 class="card-title font-semibold text-xl text-gray-900"><%= lecture.title %></h5>
                            <p class="card-text text-gray-700"><%= lecture.description %></p>

                            <div class="mt-auto">
                                <a href="<%= lecture.video.url %>" class="btn btn-primary w-full py-2 mt-2 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600">Watch Lecture</a>
                                <% if (currUser && currUser._id && courseDetail.owner && currUser._id.equals(courseDetail.owner._id)) { %>
                                    <a href="/home/<%=courseDetail._id%>/<%= lecture._id %>/edit" class="btn btn-warning w-full py-2 mt-2 bg-yellow-500 text-white font-semibold rounded-md hover:bg-yellow-600">Edit</a>
                                <% } %>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <p class="text-center text-gray-600 font-medium">No lectures available for this course.</p>
        <% } %>
    </div>
</div>
