<% if(success && success.length){ %>
  <div class="mx-auto w-full max-w-md bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline"><%= success %></span>
    <button type="button" class="absolute top-2 right-2 text-green-700 hover:text-green-900" onclick="this.parentElement.remove()" aria-label="Close">
      ✕
    </button>
  </div>
<% } %>

<% if(error && error.length){ %>
  <div class="mx-auto w-full max-w-md bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
    <span class="block sm:inline"><%= error %></span>
    <button type="button" class="absolute top-2 right-2 text-red-700 hover:text-red-900" onclick="this.parentElement.remove()" aria-label="Close">
      ✕
    </button>
  </div>
<% } %>
